<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link type="text/css" rel="stylesheet" href="~/css/customsite.css" />
    <link type="text/css" rel="stylesheet" href="~/css/animation.css" />
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">*@

    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/brands.min.css" />

    <title>Roman Shalabodov | Web Developer</title>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.2.1/dist/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery.maskedinput@1.4.1/src/jquery.maskedinput.min.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>
    <header>
        <div class="gradient">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3 gradiented-image" role="navigation">
                <div class="container header-container">
                    <div class="navbar-header">
                        <h1 class="logo">Web development</h1>
                    </div>
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a class="custom-link" href="#about-me">About me</a></li>
                        <li class="nav-item"><a class="custom-link" href="#skills">Skills</a></li>
                        <li class="nav-item"><a class="custom-link" href="#review">Reviews</a></li>
                        <li class="nav-item"><a class="custom-link" href="#contacts">Contacts</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main role="main" @*class="pb-3"*@>
        @RenderBody()
    </main>

    <footer class="footer text-muted">
        <div class="container footer-container border-top">
            All rights reserved | @DateTime.Now.ToString("yyyy")
        </div>
    </footer>

    <script src="~/js/animation.js" type="text/javascript"></script>
    <script src="~/js/customsite.js" type="text/javascript"></script>
</body>
</html>
